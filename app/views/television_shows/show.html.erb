<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>

<hr>
<h4>Cast</h4>
<% @television_show.characters.each do |character| %>
  <%= character.name %> played by <%= character.actor %>
  <p class='small'>
    description: <%= character.description %>
    <%= button_to "Delete Character", character_path(character), method: :delete %>
  </p>
<%end%>

<hr>
<h5>Post New Character</h5>
<%= form_for [@television_show, @character] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>

  <%= f.label :actor %>:
  <%= f.text_field :actor %><br>

  <%= f.label :description %>:
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>
